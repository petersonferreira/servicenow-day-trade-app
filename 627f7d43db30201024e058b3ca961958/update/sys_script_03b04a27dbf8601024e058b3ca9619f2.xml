        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var agg = new GlideAggregate('x_200145_trade_sa_day_trade');
    agg.addQuery('trade_policy', current.trade_policy);
    agg.addAggregate('SUM', 'amount');
    agg.groupBy('trade_policy');
    agg.query();

    if (agg.next()) {

        var tp = current.trade_policy.getRefRecord();
        var sum = agg.getAggregate('SUM', 'amount');
		
			sum = parseFloat(sum) + parseFloat(tp.month_amount);

        tp.setValue('month_result', 'BRL;' + sum);
        tp.update();

    }


})(current, previous);]]></script>
