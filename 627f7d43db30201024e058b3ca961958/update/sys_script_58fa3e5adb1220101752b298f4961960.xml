        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var points = current.points,
        asymmetry;
    var re = /,/gi;

    if (current.result == 'gain') {

        asymmetry = points / current.stop_loss;
        asymmetry = asymmetry.toFixed(1).toString().split('.');

        if (asymmetry[1] == 0) {
            asymmetry = asymmetry[0];
        }

        asymmetry = "1:" + asymmetry.toString().replace(re, '');

    } else if (current.result == 'loss') {

        if (points == current.stop_loss) {
            asymmetry = "-1:1";
        } else {
            points *= -1;
            asymmetry = points / current.stop_loss;
            asymmetry = asymmetry.toFixed(1).toString().split('.');

            if (asymmetry[1] == 0) {
                asymmetry = asymmetry[0];
            }

            asymmetry = asymmetry.toString().replace(re, '') + ":1";

        }

    } else {
        asymmetry = "0:0";
    }

    current.asymmetry = asymmetry;


})(current, previous);]]></script>
